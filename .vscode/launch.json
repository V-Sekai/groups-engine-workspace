{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch editor Windows",
      "type": "lldb",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "miDebuggerPath": "/usr/bin/gdb",
      "args": ["--path", "groups","-e"],
      "program": "${workspaceFolder}/godot/bin/godot.windows.double.opt.tools.64.exe",
      "visualizerFile": "${workspaceFolder}/godot/platform/windows/godot.natvis",
      "preLaunchTask": "Build Windows"
    },
    {
      "name": "Launch Projects (fire)",
      "type": "lldb",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/godot/bin/godot.linuxbsd.opt.tools.64.llvm",
      "preLaunchTask": "Build Linuxbsd (fire)"
    },
    {
      "name": "Launch (fire)",
      "type": "lldb",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "args": ["--path", "groups", "-e"],
      "program": "${workspaceFolder}/godot/bin/godot.linuxbsd.opt.tools.64.llvm",
      "preLaunchTask": "Build Linuxbsd (fire)"
    },
    {
      "name": "(Windows) Attach",
      "type": "lldb",
      "request": "attach",
      "processId": "${command:pickProcess}"
    },
    {
      "name": "Launch regression test",
      "type": "lldb",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "miDebuggerPath": "/usr/bin/gdb",
      "args": ["--audio-driver", "Dummy", "--path", "regression-tests"],
      "program": "${workspaceFolder}/godot/bin/godot.linuxbsd.double.opt.tools.64.llvm",
      "visualizerFile": "${workspaceFolder}/godot/platform/windows/godot.natvis",
      "preLaunchTask": "Build Linuxbsd (fire)"
    },
  ]
}

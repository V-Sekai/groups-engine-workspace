{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch editor Mac",
      "type": "lldb",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "args": ["--path", "../groups", "-e"],
      "program": "${workspaceFolder}/godot/bin/godot.osx.opt.tools.64",
      "preLaunchTask": "Mac",
    },
    {
      "name": "Launch editor Windows",
      "type": "cppvsdbg",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "args": ["--path", "../groups", "-e"],
      "program": "${workspaceFolder}/godot/bin/godot.windows.opt.tools.64",
      "preLaunchTask": "Windows",
    },
    {
      "name": "Launch editor Linux",
      "type": "lldb",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "args": ["--path", "SKEL_fire_rabbit", "-e"],
      "program": "${workspaceFolder}/godot/bin/godot.linuxbsd.opt.tools.64",
      "preLaunchTask": "Linux",
    },
  ]
}

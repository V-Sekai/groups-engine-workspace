{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch editor Windows",
      "type": "cppvsdbg",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "args": ["--path", "v-sekai-game", "-e"],
      "program": "${workspaceFolder}/godot/bin/godot.windows.editor.dev.x86_64.llvm.exe",
      "preLaunchTask": "Windows",
    },
    {
      "name": "Launch editor Linux",
      "type": "lldb",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "args": ["--path", "v-sekai-game", "-e"],
      "program": "${workspaceFolder}/godot/bin/godot.linuxbsd.editor.x86_64.llvm",
      "preLaunchTask": "Linux",
    },
    {
      "name": "Launch editor Mac",
      "type": "lldb",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "args": ["--path", "v-sekai-game", "-e"],
      "program": "${workspaceFolder}/godot/bin/godot.osx.editor.tools.64",
      "preLaunchTask": "Mac",
    },
  ]
}

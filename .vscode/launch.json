    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch editor plain",
            "type": "cppvsdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "miDebuggerPath": "/usr/bin/gdb",
            "args": [
                "--path",
                "dance",
                "-e"
            ],
            "preLaunchTask": "Build Linux no update",
            "program": "${workspaceFolder}/godot/bin/godot.linuxbsd.opt.tools.64.llvm",
            "visualizerFile": "${workspaceFolder}/godot/platform/windows/godot.natvis",
        },
        {
            "name": "Launch editor",
            "type": "cppvsdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "miDebuggerPath": "/usr/bin/gdb",
            "args": [
                "--path",
                "groups",
                "-e"
            ],
            "program": "${workspaceFolder}/godot/bin/godot.windows.opt.tools",
            "visualizerFile": "${workspaceFolder}/godot/platform/windows/godot.natvis",
            "preLaunchTask": "Build Windows",
        },
        {
            "name": "Launch game",
            "type": "cppvsdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "miDebuggerPath": "/usr/bin/gdb",
            "args": [
                "--path",
                "groups",
            ],
            "program": "${workspaceFolder}/godot/bin/godot.linuxbsd.opt.tools.64.llvm",
            "visualizerFile": "${workspaceFolder}/godot/platform/windows/godot.natvis",
            "preLaunchTask": "Build Linux",
        },
    ],
}
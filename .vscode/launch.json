{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch editor Windows",
      "type": "lldb",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "args": ["--path", "groups","-e"],
      "program": "${workspaceFolder}/godot/bin/godot.windows.opt.tools.64.exe",
      "preLaunchTask": "Build Windows"
    },
    {
      "name": "Launch Projects (fire)",
      "type": "lldb",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "args": ["--path", "groups","-e"],
      "program": "${workspaceFolder}/godot/bin/godot.linuxbsd.opt.tools.64.llvm",
      "preLaunchTask": "Build Linux"
    },
    {
      "name": "Launch editor Macos",
      "type": "lldb",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "args": ["--path", "groups","-e"],
      "program": "${workspaceFolder}/godot/bin/godot.osx.opt.tools.64",
      "preLaunchTask": "Build osx"
    },
    {
      "name": "Launch regression test",
      "type": "lldb",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "args": ["--audio-driver", "Dummy", "--path", "regression-tests"],
      "program": "${workspaceFolder}/godot/bin/godot.linuxbsd.opt.tools.64.llvm",
      "preLaunchTask": "Build Linux"
    },
  ]
}

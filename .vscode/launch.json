{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch editor Windows",
            "type": "lldb",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "miDebuggerPath": "/usr/bin/gdb",
            "args": [
                "--path",
                "groups",
                "-e"
            ],
            "program": "${workspaceFolder}/godot/bin/godot.windows.opt.tools.64.exe",
            "visualizerFile": "${workspaceFolder}/godot/platform/windows/godot.natvis",
            "preLaunchTask": "Build Windows",
        },
        {
            "name": "Launch editor (fire)",
            "type": "lldb",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "miDebuggerPath": "/usr/bin/gdb",
            "args": [
                "--path",
                "groups",
                "-e"
            ],
            "program": "${workspaceFolder}/godot/bin/godot.linuxbsd.opt.tools.64.llvm.san",
            "visualizerFile": "${workspaceFolder}/godot/platform/windows/godot.natvis",
            "preLaunchTask": "Build Linuxbsd (fire)",
        },
    ],
}

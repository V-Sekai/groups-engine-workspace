    "version": "0.2.0",
    "configurations": [    
        {
            "name": "Launch",
            "type": "cppdbg",
            "request": "launch",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "cwd": "${workspaceFolder}",
            "args": ["--path", "hop-spin-dance", "-e", "--single-window"],
            "program":  "${workspaceFolder}/godot/bin/godot.linuxbsd.opt.tools.64.llvm",
            "visualizerFile": "${workspaceFolder}/godot/platform/windows/godot.natvis"
        }
    ]
}

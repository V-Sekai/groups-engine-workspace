  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch editor",
      "type": "cppvsdbg",
      "requireExactSource": true,
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "args": ["--path", "avatar-wellness", "-e"],
      "program": "${workspaceFolder}/godot/bin/godot.windows.opt.tools.64.exe",
      "visualizerFile": "${workspaceFolder}/godot/platform/windows/godot.natvis",
      "preLaunchTask": "Build Windows"
    },
    {
      "name": "Launch game",
      "type": "cppvsdbg",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "args": ["--path", "avatar-wellness"],
      "program": "${workspaceFolder}/godot/bin/godot.windows.opt.tools.64.exe",
      "visualizerFile": "${workspaceFolder}/godot/platform/windows/godot.natvis",
      "preLaunchTask": "Build Windows"
    }
  ]
}

{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Windows",
      "type": "shell",
      "command": "scons target=release_debug bits=64 no_editor_splash=yes dev=yes werror=no tests=no platform=windows -j32 use_llvm=yes use_mingw=yes use_lld=yes LINKFLAGS='-Wl,-pdb=' CCFLAGS='-g -gcodeview' custom_modules=../groups_godot_modules",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build Web",
      "type": "shell",
      "command": "scons -j34 platform=javascript production=yes deprecated=no disable_2d=yes target=release initial_memory=256 custom_modules=../groups_godot_modules_javascript",
      "options": {
        "cwd": "${workspaceFolder}/godot-launcher"
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Rebase upstream Godot",
      "type": "shell",
      "command": "git checkout -f merge-script-4.x && ./update_godot_v_sekai.sh && ./update_repos.sh",
      "options": {
        "cwd": "${workspaceFolder}/merge"
      },
      "problemMatcher": [],
      "runOptions": {
        "instanceLimit": 1
      }
    },
    {
      "label": "Abort rebase",
      "type": "shell",
      "command": "git checkout -f merge-script-4.x",
      "options": {
        "cwd": "${workspaceFolder}/merge"
      },
      "problemMatcher": [],
      "runOptions": {
        "instanceLimit": 1
      },
      "group": "build"
    },
    {
      "label": "Update repos",
      "type": "shell",
      "command": "./update_repos.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Build doctool on branch",
      "type": "shell",
      "command": "./bin/godot.windows.opt.tools.64.exe --doctool",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "dependsOn": [
        "Build Windows without checkout and without modules"
      ],
      "problemMatcher": []
    }
  ]
}

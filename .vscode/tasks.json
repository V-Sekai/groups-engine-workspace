{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Windows",
      "type": "shell",
      "command": "scons -j8 platform=windows bits=64 target=release_debug custom_modules=../godot-modules-groups",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Build Linux",
      "type": "shell",
      "command": "scons -j`nproc` platform=linuxbsd bits=64 target=release_debug custom_modules=../godot-modules-groups",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build Linuxbsd (fire)",
      "type": "shell",
      "command": "scons compiledb=yes target=release_debug dev=yes werror=no use_lld=yes use_llvm=yes platform=linuxbsd -j`nproc` custom_modules=../godot-modules-groups",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "problemMatcher": [],
      "promptOnClose": true,
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}

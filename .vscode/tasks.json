{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "scons platform=linuxbsd -j`nproc` bits=64 dev=yes use_llvm=yes use_lld=yes dev=yes deprecated=yes target=release_debug custom_modules=../groups_godot_modules",
            "options": {
                "cwd": "${workspaceFolder}/godot"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
        },
    ]
}
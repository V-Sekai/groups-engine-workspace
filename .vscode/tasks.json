{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "scons platform=linuxbsd -j`nproc` bits=64 dev=yes use_llvm=yes use_lld=yes dev=yes use_thinlto=yes deprecated=yes target=debug",
            "options": {
                "cwd": "${workspaceFolder}/godot"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "visualizerFile": "${workspaceFolder}/godot/platform/windows/godot.natvis",
        }
    ]
}
{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Windows",
      "type": "shell",
      "command": "scons LINKFLAGS='-Wl,-pdb=' CCFLAGS='-g -gcodeview' debug_symbols=no deprecated=no -j8 platform=windows use_llvm=yes use_mingw=yes bits=64 target=release_debug custom_modules=../godot-modules-groups",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Build Linux",
      "type": "shell",
      "command": "scons -j`nproc` platform=linuxbsd bits=64 target=release_debug custom_modules=../godot-modules-groups",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Build Linuxbsd (fire)",
      "type": "shell",
      "command": "scons compiledb=yes target=release_debug dev=yes werror=yes use_lld=yes use_llvm=yes platform=linuxbsd -j`nproc` custom_modules=../godot-modules-groups",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "problemMatcher": [],
      "promptOnClose": true,
      "group": "build"
    },
    {
      "label": "Build Javascript (fire)",
      "type": "shell",
      "command": "scons compiledb=yes target=release_debug werror=yes tools=yes platform=javascript -j`nproc` custom_modules=../godot-modules-groups",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "problemMatcher": [],
      "promptOnClose": true,
      "group": "build"
    },
    {
      "label": "Build Mono (fire) glue generator",
      "type": "shell",
      "command": "scons compiledb=yes tools=yes module_mono_enabled=yes mono_glue=no use_mingw=yes target=release_debug werror=yes tools=yes platform=linuxbsd -j`nproc` custom_modules=../godot-modules-groups",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "problemMatcher": [],
      "promptOnClose": true,
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build Mono (fire) glue",
      "type": "shell",
      "command": "bin/godot.linuxbsd.opt.tools.64.mono --generate-mono-glue modules/mono/glue",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "problemMatcher": [],
      "promptOnClose": true,
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build Mono Windows (fire)",
      "type": "shell",
      "command": "scons mono_prefix=/var/lib/mono LINKFLAGS='-Wl,-pdb=' CCFLAGS='-g -gcodeview' module_mono_enabled=yes debug_symbols=no deprecated=no -j8 platform=windows use_lld=yes use_llvm=yes use_mingw=yes bits=64 target=release_debug custom_modules=../godot-modules-groups",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "problemMatcher": [],
      "promptOnClose": true,
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build Mono Linuxbsd (fire)",
      "type": "shell",
      "command": "scons compiledb=yes module_mono_enabled=yes target=release_debug dev=yes werror=yes use_lld=yes use_llvm=yes platform=linuxbsd -j`nproc` custom_modules=../godot-modules-groups",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "problemMatcher": [],
      "promptOnClose": true,
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}

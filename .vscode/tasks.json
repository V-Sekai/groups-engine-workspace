{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build OSX",
      "type": "shell",
      "command": "scons bits=64 compiledb=yes test=yes deprecated=no -j6 platform=osx bits=64 target=release_debug custom_modules=../godot-modules-groups",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Build Windows Mingw",
      "type": "shell",
      "command": "scons target=release_debug bits=64 compiledb=yes test=yes debug_symbols=no deprecated=no -j32 platform=windows bits=64 use_mingw=yes use_llvm=yes custom_modules=../godot-modules-groups",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}

{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Windows",
            "type": "shell",
            "command": "scons platform=windows -j32 tests=no LINKFLAGS='-Wl,--build-id' werror=no use_llvm=yes use_thin_lto=yes symbols=yes use_lld=yes use_mingw=yes bits=64 deprecated=no target=release_debug custom_modules=../groups_godot_modules",
            "options": {
                "cwd": "${workspaceFolder}/godot"
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Build Linuxbsd",
            "type": "shell",
            "command": "scons -j`nproc` use_asan=yes use_bsan=yes tests=no LINKFLAGS='-Wl,--build-id' werror=no use_llvm=yes use_thin_lto=yes platform=linuxbsd symbols=yes use_lld=yes use_llvm=yes use_mingw=no bits=64 deprecated=no target=release_debug custom_modules=../groups_godot_modules",
            "options": {
                "cwd": "${workspaceFolder}/godot"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build OSX",
            "type": "shell",
            "command": "scons -j`nproc` tests=no werror=no use_thin_lto=no platform=osx symbols=yes use_mingw=no bits=64 deprecated=no target=release_debug custom_modules=../groups_godot_modules osxcross_sdk=darwin19",
            "options": {
                "cwd": "${workspaceFolder}/godot",
                "env": {
                    "OSXCROSS_ROOT": "/opt/osxcross"
                }
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Update Repositories",
            "type": "shell",
            "command": "./update_repos.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "build linuxbsd no modules",
            "type": "shell",
            "command": "scons -j`nproc` platform=linuxbsd dev=yes werror=no use_lld=yes use_llvm=yes use_mingw=yes use_static_cpp=no use_asan=yes use_bsan=yes bits=64 deprecated=yes target=debug",
            "options": {
                "cwd": "${workspaceFolder}/godot"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Windows",
            "type": "shell",
            "command": "scons no_editor_splash=yes dev=yes werror=no tests=no platform=windows -j14 use_llvm=yes LINKFLAGS='-Wl,-pdb=' CCFLAGS='-g -gcodeview' use_lld=yes use_mingw=yes bits=64 target=release_debug separate_debug_symbols=yes custom_modules=../groups_godot_modules",
            "options": {
                "cwd": "${workspaceFolder}/godot"
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Build Windows No Modules",
            "type": "shell",
            "command": "scons platform=windows -j14 tests=no werror=no use_llvm=yes use_thin_lto=yes LINKFLAGS='-Wl,-pdb=' CCFLAGS='-g -gcodeview' symbols=yes use_lld=yes use_mingw=yes bits=64 deprecated=no target=debug",
            "options": {
                "cwd": "${workspaceFolder}/godot"
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Build Linuxbsd",
            "type": "shell",
            "command": "scons -j`nproc` tests=no LINKFLAGS='-Wl,--build-id' werror=yes use_llvm=yes use_thin_lto=yes platform=linuxbsd symbols=yes use_lld=yes use_llvm=yes use_mingw=no bits=64 deprecated=no target=release_debug custom_modules=../groups_godot_modules",
            "options": {
                "cwd": "${workspaceFolder}/godot"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build Macos",
            "type": "shell",
            "command": "scons -j8 tests=no werror=no use_thin_lto=no platform=osx symbols=yes use_mingw=no bits=64 deprecated=no target=release_debug custom_modules=../groups_godot_modules",
            "options": {
                "cwd": "${workspaceFolder}/godot"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build Macos Tests",
            "type": "shell",
            "command": "scons -j8 dev=yes tests=yes werror=yes use_thin_lto=no platform=osx symbols=yes use_mingw=no bits=64 deprecated=no target=release_debug custom_modules=../groups_godot_modules",
            "options": {
                "cwd": "${workspaceFolder}/godot"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Update Repositories",
            "type": "shell",
            "command": "./update_repos.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "build linuxbsd no modules",
            "type": "shell",
            "command": "scons -j`nproc` platform=linuxbsd dev=yes werror=no use_lld=yes use_llvm=yes use_mingw=yes use_static_cpp=no use_asan=yes use_bsan=yes bits=64 deprecated=yes target=debug",
            "options": {
                "cwd": "${workspaceFolder}/godot"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
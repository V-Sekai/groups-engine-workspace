{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Windows",
            "type": "shell",
            "command": "scons no_editor_splash=yes dev=yes werror=no tests=no platform=windows -j34 use_llvm=yes LINKFLAGS='-Wl,-pdb=' CCFLAGS='-g -gcodeview' use_lld=yes use_mingw=yes bits=64 target=release_debug separate_debug_symbols=yes custom_modules=../groups_godot_modules",
            "options": {
                "cwd": "${workspaceFolder}/godot"
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Rebase upstream Godot",
            "type": "shell",
            "command": "git checkout -f merge-script-4.x && ./update_godot_v_sekai.sh && cd .. && ./update_repos.sh",
            "options": {
                "cwd": "${workspaceFolder}/merge"
            },
            "problemMatcher": [],
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "Abort rebase",
            "type": "shell",
            "command": "git checkout -f merge-script-4.x",
            "options": {
                "cwd": "${workspaceFolder}/merge"
            },
            "problemMatcher": [],
            "runOptions": {
                "instanceLimit": 1
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Update repos.sh",
            "type": "shell",
            "command": "./update_repos.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Update Repositories",
            "type": "shell",
            "command": "./update_repos.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Build doctool on branch",
            "type": "shell",
            "command": "./bin/godot.linuxbsd.opt.tools.64.llvm --doctool",
            "options": {
                "cwd": "${workspaceFolder}/godot"
            },
            "dependsOn": [
                "Build Linuxbsd without checkout and without modules"
            ],
            "problemMatcher": []
        }
    ]
}
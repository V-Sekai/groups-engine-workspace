{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Mac",
      "type": "shell",
      "command": "scons bits=64 compiledb=yes test=yes deprecated=no platform=osx dev_build=yes bits=64 target=editor custom_modules=../godot-modules-groups",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Windows",
      "type": "shell",
      "command": "scons target=editor bits=64 compiledb=yes warning=no test=yes debug_symbols=no platform=windows dev_build=yes bits=64 use_mingw=yes use_llvm=yes use_thinlto=no warnings=no  LINKFLAGS='-Wl,-pdb=' CCFLAGS='-g -gcodeview' debug_symbols=no custom_modules=../godot-modules-groups",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Windows MSVC",
      "type": "shell",
      "command": "scons target=editor vsproj=yes bits=64 compiledb=yes warning=no test=yes deprecated=no platform=windows dev_build=yes bits=64 custom_modules=../godot-modules-groups",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Linux",
      "type": "shell",
      "command": "scons target=editor bits=64 use_static_cpp=no use_llvm=yes compiledb=yes LINKFLAGS=-L/opt/rh/gcc-toolset-9/root/usr/lib/gcc/x86_64-redhat-linux/9/ test=yes platform=linuxbsd dev_build=yes custom_modules=../godot-modules-groups",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Web",
      "type": "shell",
      "command": "scons target=editor platform=web compiledb=yes warnings=no test=yes custom_modules=../godot-modules-groups",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "group": "build",
      "problemMatcher": []
    }
  ]
}

{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Linuxbsd",
      "type": "shell",
      "command": "scons compiledb=yes target=release_debug dev=yes werror=no use_lld=yes use_llvm=yes platform=linuxbsd -j`nproc` custom_modules=../groups_godot_modules",
      "options": {
        "cwd": "${workspaceFolder}/godot"
      },
      "problemMatcher": [],
      "promptOnClose": true,
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}

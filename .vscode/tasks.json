{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "scons platform=linuxbsd werror=no -j16 bits=64 debug_symbols=no deprecated=yes target=release_debug custom_modules=../groups_godot_modules",
            "problemMatcher": {
                "base": "$gcc"
            },
            "options": {
                "cwd": "${workspaceFolder}/godot"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
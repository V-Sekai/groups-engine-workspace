{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Windows",
            "type": "shell",
            "command": "scons no_editor_splash=yes dev=yes werror=no tests=no platform=windows -j14 use_llvm=yes LINKFLAGS='-Wl,-pdb=' CCFLAGS='-g -gcodeview' use_lld=yes use_mingw=yes bits=64 target=release_debug separate_debug_symbols=yes custom_modules=../groups_godot_modules",
            "options": {
                "cwd": "${workspaceFolder}/godot"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Windows No Modules",
            "type": "shell",
            "command": "scons platform=windows -j14 tests=no werror=no use_llvm=yes use_thin_lto=yes LINKFLAGS='-Wl,-pdb=' CCFLAGS='-g -gcodeview' symbols=yes use_lld=yes use_mingw=yes bits=64 deprecated=no target=debug",
            "options": {
                "cwd": "${workspaceFolder}/godot"
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Rebase upstream Godot",
            "type": "shell",
            "command": "git checkout -f merge-script-4.x && ./update_godot_v_sekai.sh && cd .. && ./update_repos.sh",
            "options": {
                "cwd": "${workspaceFolder}/merge"
            },
            "problemMatcher": [],
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "Abort rebase",
            "type": "shell",
            "command": "git checkout -f merge-script-4.x",
            "options": {
                "cwd": "${workspaceFolder}/merge"
            },
            "problemMatcher": [],
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "Update repos.sh",
            "type": "shell",
            "command": "./update_repos.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Linuxbsd",
            "type": "shell",
            "command": "scons -j`nproc` use_ninja=yes tests=no LINKFLAGS='-Wl,--build-id' werror=yes use_llvm=yes use_thin_lto=yes platform=linuxbsd symbols=yes use_lld=yes use_llvm=yes use_mingw=no bits=64 deprecated=no target=release_debug custom_modules=../groups_godot_modules && ninja",
            "options": {
                "cwd": "${workspaceFolder}/godot"
            },
            "dependsOn": [
                "Update repos.sh"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build Linuxbsd debug without checkout",
            "type": "shell",
            "command": "scons -j`nproc` use_ninja=yes tests=no LINKFLAGS='-Wl,--build-id' werror=yes use_llvm=yes use_thin_lto=yes platform=linuxbsd symbols=yes use_lld=yes use_llvm=yes use_mingw=no bits=64 deprecated=no target=debug custom_modules=../groups_godot_modules && ninja",
            "options": {
                "cwd": "${workspaceFolder}/godot"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "Build Macos",
            "type": "shell",
            "command": "scons -j8 tests=no werror=no use_thin_lto=no platform=osx symbols=yes use_mingw=no bits=64 deprecated=no target=release_debug custom_modules=../groups_godot_modules",
            "options": {
                "cwd": "${workspaceFolder}/godot"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build Macos Tests",
            "type": "shell",
            "command": "scons -j8 dev=yes tests=yes werror=yes use_thin_lto=no platform=osx symbols=yes use_mingw=no bits=64 deprecated=no target=release_debug custom_modules=../groups_godot_modules",
            "options": {
                "cwd": "${workspaceFolder}/godot"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Update Repositories",
            "type": "shell",
            "command": "./update_repos.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Build doctool on branch",
            "type": "shell",
            "command": "./bin/godot.linuxbsd.opt.tools.64.llvm --doctool",
            "options": {
                "cwd": "${workspaceFolder}/godot"
            },
            "dependsOn": [
                "Build Linuxbsd without checkout and without modules"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build Linuxbsd without checkout and without modules",
            "type": "shell",
            "command": "scons -j`nproc` use_ninja=yes tests=no LINKFLAGS='-Wl,--build-id' werror=yes use_llvm=yes use_thin_lto=yes platform=linuxbsd symbols=yes use_lld=yes use_llvm=yes use_mingw=no bits=64 deprecated=no target=release_debug && ninja",
            "options": {
                "cwd": "${workspaceFolder}/godot"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}